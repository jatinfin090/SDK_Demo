<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DemoStructure" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:fitsSystemWindows">true</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <!--        <item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="App_theme" parent="Theme.DemoStructure">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TilEditable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/grey_shade_1</item>
        <item name="android:background">@drawable/bgsdk_edt_grey_rounded_2</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/grey_shade_4</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/grey_shade_1</item>
        <item name="android:clickable">true</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@null</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="fontFamily">@font/manrope_bold</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="theme">@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="TieEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="textSize">@dimen/_16ssp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">35</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="theme">@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined</item>
    </style>


</resources>